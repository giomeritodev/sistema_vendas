<%- include("./../header_index") -%>

	<!-- Main content -->
      <section class="content container-fluid">

        <div class="box">
          <div class="box-header">
            <h3 class="box-title">Lista</h3>
            <a href="#" class="btn btn-xs pull-right btn-success" data-toggle="modal" data-target="#modal-create"><i
                class="fa fa-plus"></i> Novo</a>
          </div>
          <!-- /.box-header -->
          <div class="box-body no-padding">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th style="width: 10px">#</th>
                  <th>Foto</th>
                  <th>Descrição</th>
                  <th>Preço</th>                  
                  <th>Ativo</th>
                  <th style="min-width: 134px;">Ações</th>
                </tr>
              </thead>
              <tbody>

                
                <tr>
                  <td>1.</td>
                
                  <td>
                    <img src="dist/img/boxed-bg.jpg" alt="" style="height: 18px;">
                  </td>

                  <td>Picolé 60g</td>
                  <td>R$1,00</td>
                  <td>Sim</td>
                  <td><button type="button" class="btn btn-xs btn-info btn-update" data-toggle="modal" data-target="#modal-update"><i
                        class="fa fa-pencil"></i> Editar</button>&nbsp;<button type="button" class="btn btn-xs btn-danger btn-delete"><i
                        class="fa fa-trash"></i> Excluir</button></td>
                </tr>

              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
        </div>

      </section>
      <!-- /.content -->

    <div class="modal fade" id="modal-create">
      <div class="modal-dialog">
        <div class="modal-content" style="border-top: 3px solid #00a65a;">

          <form action="/produtos" method="post">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              
              <!--Messages-->
              <%- include("./../../error") -%>
              
              <h4 class="modal-title">Novo Produto</h4>


            </div>
            <div class="modal-body">
              
              <div class="form-group">
                <label for="inputDescriptionCreate">Descrição</label>
                <input class="form-control" required id="inputDescriptionCreate" name="descricao" value="<%= body.descricao %>">
              </div>

              <div class="form-group">
                <label for="inputPriceCreate">Preço</label>
                <input type="number" required class="form-control" id="inputPriceCreate" name="preco" value="<%= body.preco %>">
              </div>
              
              <div class="form-group">
                <label for="inputTitleCreate">Ativo</label>
                <input type="text" required class="form-control" id="inputTitleCreate" name="ativo" value="<%= body.ativo %>">
              </div>

              <div class="form-group">
                <label for="inputPhotoCreate">Foto</label>
                <img style="max-width: 128px; max-height: 128px; display: block;" src="dist/img/boxed-bg.jpg">
                <input type="file" class="form-control" id="inputPhotoCreate" name="photo" value="<%= body.photo %>">
              </div>


            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancelar</button>
              <button type="submit" class="btn btn-success">Salvar</button>
            </div>
          </form>

        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>



<%- include("./../footer_index") -%>